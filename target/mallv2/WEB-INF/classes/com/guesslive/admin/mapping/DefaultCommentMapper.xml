<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guesslive.admin.dao.DefaultCommentMapper">

	<insert id="insertDefaultComment" useGeneratedKeys="true" keyProperty="id">
		insert into t_default_comment
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="content != null">
				content,
			</if>
			<if test="createtime != null">
				createtime
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="content != null">
				#{content},
			</if>
			<if test="createtime != null">
				#{createtime}
			</if>
		</trim>
	</insert>

	<select id="selectAll" resultType="DefaultComment">
		select
		* from t_default_comment
		<where>
			<if test="dcomment.content != '' and dcomment.content != null">
				and content like '%${dcomment.content}%'
			</if>
		</where>
		order by id DESC
		limit #{start},#{rows}
	</select>

	<select id="selectTotal" resultType="int">
		select count(*) from t_default_comment
		<where>
			<if test="content != '' and content != null">
				and content like '%${content}%'
			</if>
		</where>
	</select>
	
	<delete id="deleteById" parameterType="int">
		delete from t_default_comment where id=#{id}
	</delete>
	
</mapper>